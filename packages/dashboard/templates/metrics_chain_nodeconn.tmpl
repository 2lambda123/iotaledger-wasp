{{define "metricsNodeconnMessages"}}
	{{ $metrics := (index . 0) }}
	<table>
		<thead>
			<tr>
				<th>Message name</th>
				<th></th>
				<th>Total</th>
				<th>Last time</th>
				<th>Last message</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Pull latest output</td>
				<td>OUT</td>
				<td>{{ (($metrics.GetOutPullLatestOutput).GetL1MessagesTotal) }}</td>
				<td>{{ (formatTimestampOrNever (($metrics.GetOutPullLatestOutput).GetLastL1MessageTime)) }}</td>
				{{ template "longStringCell" (($metrics.GetOutPullLatestOutput).GetLastL1Message)}}
			</tr>
