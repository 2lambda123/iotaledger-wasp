{
    "include": ["lib/**/*", "tests/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "CommonJS",
        "outDir": "./dist/node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "types": ["node", "Promise", "jest"],
        "lib": ["ES2015"],
        "target": "ES2015",
        "typeRoots": ["./types", "./node_modules/@types", "./node_modules/assemblyscript/std/types"]
    },
}
