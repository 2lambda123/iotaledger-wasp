{
    "include": ["lib/**/*", "tests/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es2020"],
        "module": "CommonJS",
        "outDir": "./dist/node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "extends": "assemblyscript/std/assembly.json"
}
